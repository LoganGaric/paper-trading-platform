{
  "name": "@paper-trading/backend",
  "version": "1.0.0",
  "description": "Backend API server with WebSocket support",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "prisma generate && npx tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "type-check": "tsc --noEmit",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:reset": "prisma migrate reset",
    "db:seed": "tsx src/prisma/seed.ts",
    "db:generate": "prisma generate",
    "vercel-build": "prisma generate --schema=./prisma/schema.prisma && prisma migrate deploy --schema=./prisma/schema.prisma",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@prisma/client": "^5.9.0",
    "@types/uuid": "^10.0.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.0",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.1",
    "express-winston": "^4.2.0",
    "helmet": "^7.2.0",
    "hpp": "^0.2.3",
    "morgan": "^1.10.1",
    "prom-client": "^15.1.3",
    "tsx": "^4.7.0",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "ws": "^8.16.0",
    "xss": "^1.0.15",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/hpp": "^0.2.5",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.11.0",
    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.5.10",
    "jest": "^29.7.0",
    "prisma": "^5.9.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "typescript": "^5.4.0"
  }
}
